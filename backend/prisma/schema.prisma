generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                String             @id @default(cuid())
  username          String             @unique
  displayName       String?
  avatar            String?
  role              String             @default("CHILD")
  parentId          String?
  password          String
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  levelRecords      LevelRecord[]
  pointTransactions PointTransaction[]
  punishmentRecords PunishmentRecord[]
  taskCompletions   TaskCompletion[]
  tasks             Task[]
  settings          UserSettings?
  parent            User?              @relation("ParentChild", fields: [parentId], references: [id])
  children          User[]             @relation("ParentChild")

  @@map("users")
}

model Task {
  id          String             @id @default(cuid())
  title       String
  description String?
  type        String             @default("DAILY")
  starCoins   Int                @default(10)
  expReward   Int                @default(5)
  isActive    Boolean            @default(true)
  createdBy   String
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
  frequency   String             @default("DAILY")
  weekdays    String?
  timeLimit   String?
  category    String?
  difficulty  String             @default("MEDIUM")
  punishments PunishmentRecord[]
  completions TaskCompletion[]
  creator     User               @relation(fields: [createdBy], references: [id])

  @@map("tasks")
}

model TaskCompletion {
  id              String   @id @default(cuid())
  taskId          String
  userId          String
  completedAt     DateTime @default(now())
  starCoins       Int
  expGained       Int
  streak          Int?
  bonusMultiplier Float?   @default(1.0)
  user            User     @relation(fields: [userId], references: [id])
  task            Task     @relation(fields: [taskId], references: [id])

  @@unique([taskId, userId, completedAt])
  @@map("task_completions")
}

model LevelRecord {
  id         String   @id @default(cuid())
  userId     String
  level      Int
  title      String
  exp        Int
  totalExp   Int
  shipName   String
  promotedAt DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id])

  @@map("level_records")
}

model PointTransaction {
  id          String   @id @default(cuid())
  userId      String
  type        String
  amount      Int
  balance     Int
  description String
  relatedId   String?
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])

  @@map("point_transactions")
}

model Reward {
  id          String             @id @default(cuid())
  name        String
  description String?
  cost        Int
  category    String
  imageUrl    String?
  isActive    Boolean            @default(true)
  stock       Int?
  createdBy   String
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
  redemptions RewardRedemption[]

  @@map("rewards")
}

model RewardRedemption {
  id          String    @id @default(cuid())
  rewardId    String
  userId      String
  status      String    @default("PENDING")
  cost        Int
  redeemedAt  DateTime  @default(now())
  completedAt DateTime?
  notes       String?
  reward      Reward    @relation(fields: [rewardId], references: [id])

  @@map("reward_redemptions")
}

model PunishmentRule {
  id           String             @id @default(cuid())
  name         String
  description  String
  type         String
  severity     String
  value        Int
  isActive     Boolean            @default(true)
  createdBy    String
  createdAt    DateTime           @default(now())
  updatedAt    DateTime           @updatedAt
  applications PunishmentRecord[]

  @@map("punishment_rules")
}

model PunishmentRecord {
  id         String          @id @default(cuid())
  userId     String
  taskId     String?
  ruleId     String?
  type       String
  reason     String
  severity   String
  value      Int
  status     String          @default("ACTIVE")
  createdAt  DateTime        @default(now())
  resolvedAt DateTime?
  resolvedBy String?
  rule       PunishmentRule? @relation(fields: [ruleId], references: [id])
  task       Task?           @relation(fields: [taskId], references: [id])
  user       User            @relation(fields: [userId], references: [id])

  @@map("punishment_records")
}

model UserSettings {
  id                String   @id @default(cuid())
  userId            String   @unique
  theme             String   @default("dark")
  soundEnabled      Boolean  @default(true)
  notifications     Boolean  @default(true)
  language          String   @default("zh-CN")
  timezone          String   @default("Asia/Shanghai")
  dailyReminderTime String?  @default("19:00")
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id])

  @@map("user_settings")
}

model Notification {
  id        String    @id @default(cuid())
  userId    String
  title     String
  content   String
  type      String    @default("INFO")
  isRead    Boolean   @default(false)
  data      String?
  createdAt DateTime  @default(now())
  readAt    DateTime?

  @@map("notifications")
}

model SyncLog {
  id         String   @id @default(cuid())
  userId     String
  entityType String
  entityId   String
  action     String
  data       String?
  deviceId   String
  timestamp  DateTime @default(now())
  syncStatus String   @default("PENDING")

  @@map("sync_logs")
}
